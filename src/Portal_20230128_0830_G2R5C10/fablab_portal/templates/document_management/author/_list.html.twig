{% trans_default_domain 'document' %}

<div class="card text-dark bg-secondary mb-3 border border-info border-3 rounded-3">
	<div class="card-body">
		<h5 class="card-title text-center">{{ author.firstName }} {{ author.name }}</h5>
		{% if author.documents is not empty %}
			{% for document in author.documents %}
			<a href="{{ path('document_read', {'documentName': document.documentName}) }}" onclick="window.open(this.href); return false;" >{{ document.title }}
			</a>
			-|- 
			{% endfor %}
		{% endif %}
	</div>
</div>