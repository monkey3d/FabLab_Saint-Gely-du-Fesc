{% trans_default_domain 'document' %}

<div class="thumbnail1_container">
	<div class="card text-dark bg-secondary mb-3">
		
		<div class="card-body">
			<h5 class="card-title text-center">{{ document.title }}</h5>
			<p class="card-text">{{ 'document.prop.summary' | trans }} : {{ document.summary is empty ? 'document.prop.no_summary' | trans : document.summary }}
			<br>{{ 'document.prop.authors' | trans }} : 
			{% if document.authors is not empty %}
                {% for author in document.authors %}
				{{ author.firstName }} {{ author.name }} - 
				{% endfor %}
			{% else %}
				{{ 'document.prop.no_authors' | trans }}
			{% endif %}
			</p>
			{% if document.documentName %}
			<p class="text-center">
		        {{ app_action('button', 'read', 'document_management_read', {'documentName': document.documentName}, 'onclick="window.open(this.href); return false;"') | raw }}
		    </p>
		    {% endif %}
		</div>
		<div class="card-footer">
			<small class="text-decoration-none">{{ 'document.prop.release_date' | trans }} : {{ document.releaseDate is empty ? 'document.prop.no_relase_date' | trans : document.releaseDate | date("d/m/Y") }}</small>
		</div>
		
	</div>
</div>