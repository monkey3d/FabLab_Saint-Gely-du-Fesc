<div class="col-md-2">
    <div class="card" style="width: 12rem;">
      <img src="{{ asset('build/images/member/' ~ person.img) }}" class="card-img-top img-thumbnail border border-success" alt="...">
      <div class="card-body">
      	{% if person.office is defined %}
      	<h6 class="card-title text-center">{{ person.office }}</h6>
      	{% endif %}
        <h5 class="card-title text-center">
        {% if person.cv is empty %}
        	<button type="button" class="btn btn-info btn-sm">{{ person.name }}</button>
       	{% else %}
       		<button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modalCV_{{ type }}_{{ loop.index0 }}"><i class="bi bi-plus-square-fill"></i> {{ person.name }}</button>
       	{% endif %}
       	{% if person.pole is defined %}
       		<br>
       		<small><span class="badge text-bg-success">{{ person.pole }}</span></small>
       	{% endif %}
        </h5>
      </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalCV_{{ type }}_{{ loop.index0 }}" tabindex="-1" aria-labelledby="ModalCVLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    	<div class="modal-content">
			<div class="modal-header">
        		<h5 class="modal-title bg-info" id="exampleModalLabel">{{ person.name }}</h5>
        		<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        		
      		</div>
			<div class="modal-body">
			<p>
      		{{ person.cv | raw}}
      		</p>	
			</div>
      		<div class="modal-footer">
        		{# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> #}
        		{{ action('button', 'close', '', {'data-bs-dismiss': 'modal'}) | raw }}
                {# <button type="button" class="btn btn-primary">Save changes</button> #}
      		</div>
      	</div>
	</div>
</div>